<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.axes.android.putinbox"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name="com.axes.android.putinbox.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.axes.android.putinbox.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.axes.android.putinbox.EditActivity"
            android:label="@string/title_activity_edit" >
        </activity>
        <activity
            android:name="com.axes.android.putinbox.ViewActivity"
            android:label="@string/title_activity_view" >
        </activity>
        <activity
            android:name="com.axes.android.putinbox.SelectBoxActivity"
            android:label="@string/title_activity_select_box" >
        </activity>
        <activity
            android:name="com.axes.android.putinbox.SelectBoxListActivity"
            android:label="@string/title_activity_select_box_list" >
        </activity>
    </application>

</manifest>